@using IQMedia.Model;
@model List<LiteTopResults>
@if (Model != null)
{
    if (Model.Count > 0)
    {
    <div>
        <b>Most Relevant Coverage</b></div>
    <table class="topResult" width="100%">
        @*<tr>
            <th style="text-align: center;">
                Logo
            </th>
            <th style="text-align: left;">
                Title
            </th>
            <th style="text-align: left;">
                Source
            </th>
        </tr>*@
        @foreach (LiteTopResults topResults in Model)
        {
            <tr>
                <td style="width:40px;">
                    <img src="@topResults.Logo" alt="" />
                </td>
                <td>@topResults.Title
                </td>
                <td>@Html.Raw(@topResults.Publisher)
                </td>
            </tr>
        }
    </table>
    }

}