                        }
                        else
                        {
                                        
                                                <li role="presentation" class="cursorPointer"><a tabindex="-1" role="menuitem">No Filter
                                                    Available</a></li>
                        }

                                            }
                                        </ul>
                                    </li>
                                </ul>
                                <div style="clear: both;">
                                </div>
                                <br />
