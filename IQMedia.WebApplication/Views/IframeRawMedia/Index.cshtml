    $(function () {
        $("#divCC").mCustomScrollbar({
            advanced: {
                updateOnContentResize: true,
                autoScrollOnFocus: false
            }
        });

        if ($.trim($("#divPlayer_HighlightContent").html()) != "") {
            
        }
        else if ($.trim($("#divPlayer_CaptionContent").html()) != "") {
            ChangeTab(1);
        }
    });
</script>
</html>
