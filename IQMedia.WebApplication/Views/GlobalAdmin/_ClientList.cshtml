@model List<IQMedia.Model.ClientModel>
<style type="text/css">
    .topResult
    {
        font-size: 11px;
        border: 1px solid #D8D8D8;
    }
    
    .topResult tr th
    {
        padding: 4px;
    }
    
    .topResult tr th, .topResult tr td
    {
        padding: 5px 2px;
    }
</style>
@if (Model != null && Model.Count > 0)
{
    <div id="divClients_ScrollContent">
        <div style="padding-right: 15px;;margin-bottom:30px">
            <table width="100%" class="topResult" cellpadding="0" cellspacing="0" style="margin-top: 15px;">
                @{ bool IsHeader = false; }
                @foreach (IQMedia.Model.ClientModel item in Model)
                {
                    if (!IsHeader)
                    {
                    <tr>
                        @{IsHeader = true; }
                        <th style="text-align: center; width: 5%">
                        </th>
                        <th style="text-align: center; width: 5%">
                        </th>
                        <th style="text-align: left; width: 10%">
                            Client Name
                        </th>
                        @foreach (string key in item.ClientRoles.Keys)
                        {
                            <th style="text-align: left;">
                                <div class="rotate">@key</div>
                            </th>
                        }
                        <th style="text-align: left;">
                            <div class="rotate">
                                IsActive</div>
                        </th>
                    </tr>
                    }
                    <tr>
                        <td style="text-align: center;">
                            <a href="javascript:void(0);" onclick="GetClientRegistration(@item.ClientKey)">Edit</a>
                        </td>
                        <td style="text-align: center;">
                            <a href="javascript:void(0);" onclick="DeleteClient(@item.ClientKey, '@(item.ClientName.Replace("'", "\\'"))')" >Delete</a>
                        </td>
                        <td style="text-align: left;">
                            @item.ClientName
                        </td>
                        @foreach (string key in item.ClientRoles.Keys)
                        {
                            <td style="text-align: left;">
                                <input type="checkbox" disabled="disabled" checked="@item.ClientRoles[key]" />
                            </td>
                        }
                        <td style="text-align: left;">
                            @item.IsActive
                        </td>
                    </tr> 
                }
            </table>
        </div>
    </div>
}
else
{
    <table width="100%" style="text-align: center;">
        <tr>
            <td>
                <span style="background: none repeat scroll 0 0 #F2F2F2; border: 1px solid #DCDCDC;
                    margin-bottom: 10px; margin-right: 10px; padding: 3px 10px 3px 6px; position: relative;
                    width: 300px !important;">No Results found</span>
            </td>
        </tr>
    </table>
}