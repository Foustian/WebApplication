@model List<IQMedia.Model.RadioModel>
@if (Model != null && Model.Count > 0)
{
    <table width="100%" class="radiopg">
        <tr>
            <th style="text-align: center; width: 10%;">
                Station
            </th>
            <th style="text-align: left; width: 25%;">
                Market
            </th>
            <th style="text-align: right; width: 25%;">
                Date Time
            </th>
            <th style="text-align: right; width: 10%;">
                Hits
            </th>
            <th style="text-align: center; width: 5%;">
                Play
            </th>
        </tr>
        @foreach (IQMedia.Model.RadioModel item in Model)
        {
            var imgurl = "../../StationLogoImages/" + item.IQ_Station_ID + ".jpg";
           
            <tr>
                <td style="text-align: center;">
                    <img src="@imgurl" alt="@item.IQ_Station_ID" />
                </td>
                <td style="text-align: left;">
                    @item.Market
                </td>
                <td style="text-align: right;">
                    @(item.RL_StationDateTime + " "+item.TimeZone)
                </td>
                <td  style="text-align: right;">
                    @item.Mentions
                </td>
                <td style="text-align: center;">
                    <a onclick="LoadRadioPlayer('@item.RL_GUID','@item.Market','@item.RL_StationDateTime','@item.TimeZone')" href="#">
                        <img src="../../Images/play.jpg" alt="" /></a>
                </td>
            </tr> 
        }
    </table>

}
else
{
    <table width="100%" style="text-align: center;">
        <tr>
            <td>
                <span style="background: none repeat scroll 0 0 #F2F2F2; border: 1px solid #DCDCDC;
                    margin-bottom: 10px; margin-right: 10px; padding: 3px 10px 3px 6px; position: relative;
                    width: 300px !important;">No Results found</span>
            </td>
        </tr>
    </table>
    
}
