<script>
    var _PreviousElement = null;
    var _PreviousElementHover = null;

    $('.team img').click(function (e) {
        $('#divDetailHover').hide();
        var divDetail = $('#divDetail');

        if (divDetail.is(':visible') && this == _PreviousElement) {
            divDetail.hide();
            $('#divDetailHover').show();
        }
        else {

            var top = $(this).position().top + $(this).height() + 20;
            var left = $(this).position().left + parseInt($(this).width() / 2) + 5;

            $('#divDetail .a-content').html($(this).attr('a-data'));
            $('#divDetail .a-arrow').css('left', left);
            divDetail.css('top', top);
            divDetail.show();
            e.stopPropagation();

        }

        _PreviousElement = this;
    });
    $('.team img').hover(function (e) {

        var divDetail = $('#divDetailHover');

        if (divDetail.is(':visible') && this == _PreviousElementHover) {
            divDetail.hide();
        }
        else {

            var top = $(this).position().top + $(this).height() + 20;
            var left = $(this).position().left + parseInt($(this).width() / 2) + 5;

            $('#divDetailHover .a-content').html($(this).attr('b-data'));
            $('#divDetailHover .a-arrow').css('left', left);
            divDetail.css('top', top);
            if (!$('#divDetail').is(':visible')) {
                divDetail.show();
                e.stopPropagation();
            }

        }
        _PreviousElementHover = this;
    });

    $('body').click(function () {
        $('#divDetail').hide();
    });
