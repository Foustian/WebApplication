@model IQMedia.Model.CustomerModel
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Activate broadcast TV, online news, and social media with a media intelligence platform, search TV media and make video clips for sharing" />
    <meta name="keywords" content="broadcast TV monitoring, television monitoring, media intelligence platform, media monitoring, video clips, video clipping service, TV media search, TV media alerts, online news, media monitoring services" />
    <meta name="title" content="media intelligence platform" />
    <title>iQ media Sign In</title>
    <link href="~/Css/common.css" rel="stylesheet">
    <link href="~/Css/home.css" rel="stylesheet">
    <link href="~/Css/static/bootstrap.css" rel="stylesheet">
    <link href="~/Css/LogIn.css" rel="stylesheet">
    <script src="~/Scripts/jquery-1.9.1.min.js?v=1.0" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.min.js?v=1.0" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js?v=1.0" type="text/javascript"></script>
    <script type="text/javascript">

        $(function () {
            $("#LoginID").focus();
        });

        function CheckForm() {

            if ($('#frmLogin').valid()) {
                /* $('#btnLogin').attr('disabled', 'disabled');*/
                $('#imgLogInLoading').show();
            }
        }
    
    </script>
    <style type="text/css">
        body
        {
            padding-top: 0px;
        }
    </style>
</head>
<body>
    <div>
        <div class="row-fluid">
            <div class="container">
                <div class="navbar navbar-inverse">
                    <div class="">
                        <a data-target=".nav-collapse" data-toggle="collapse" class="btn btn-navbar"><span
                            class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                        </a><a href="/Home/Index" class="brand">
                            <img alt="IQ Media" src="/images/logo.png"></a>
                        <div id="nave-top-space" class="nav-collapse collapse">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="backgroundColorED">
            <h4 class="LogInHeader">
                Sign In
            </h4>
        </div>
        @using (Html.BeginForm("SignIn", "QVC", FormMethod.Post, new { @class = "form-horizontal", @id = "frmLogin" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
        
            <div style="color: red; padding-bottom: 5px;" class="controls">@ViewBag.Message</div>
            <div class="control-group">
                <label class="control-label" for="inputEmail">
                    Email</label>
                <div class="controls">
                    @Html.TextBoxFor(model => model.LoginID, new { style = "" })
                    @Html.ValidationMessageFor(model => model.LoginID, null, new { style = "color:red;" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputPassword">
                    Password</label>
                <div class="controls">
                    @Html.EditorFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password, null, new { style = "color:red;" })
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="LogInButton" id="btnLogin" onclick="CheckForm();">
                        Sign in</button>
                    <img alt="" id="imgLogInLoading" class="marginLeft10 displayNone" src="~/Images/Loading_1.gif" />
                </div>
            </div>

        }
    </div>
</body>
</html>
