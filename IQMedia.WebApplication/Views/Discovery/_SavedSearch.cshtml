    </div>
    <br />
    <br />
    }
        
    <div class="DiscoveryGrid">
        @*@{
    List<Discovery_SavedSearchModel> lstCurrent = Model.Where(w => w.IsCurrent).Select(s => s).ToList();
    foreach (Discovery_SavedSearchModel item in lstCurrent)
