@model System.Web.Mvc.HandleErrorInfo
@{
    Layout = null;
    IQMedia.WebApplication.Utility.CommonFunctions.WriteException(Model.Exception, "Unhandled Exception");
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>iQ media</title>
    <link href="~/Css/Fonts.css" rel="stylesheet" type="text/css" />
    <link href="~/Css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Css/bootstrap-responsive.css" rel="stylesheet" type="text/css" />
    <link href="~/css/feed.css?v=3.2" rel="stylesheet" type="text/css" />
    <style type="text/css">
        body
        {
            padding-top: 40px;
            font-family: 'Open Sans';
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #fff;">
        <!-- from desinger-->
        <div class="container">
        </div>
        <!-- from desinger-->
        <div class="navbar-inner navbar-custome">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                    class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a><a class="brand iqmedia-logo" href="http://iq.media" target="_blank">
                    <img src="~/images/iq-media.png?v=1.3" width="155" height="45" alt="IQ Media" /></a>
                <div class="nav-collapse collapse">
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <div class="container container_custom">
        <div class="row-fluid" id="divRowFluid">
            <div style="min-height: 450px; padding: 10px 25px 25px 25px;">
                <div style="margin: 0 auto;">
                    <div style="float: left; width: 50%;">
                        <img src="~/images/crying.png" />
                    </div>
                    <div style="float: left; width: 50%; padding-top: 100px;">
                        <span style="font-size: 32px; line-height: 47px;">@Html.Raw(String.Format(IQMedia.WebApplication.Config.ConfigSettings.Settings.ErrorUnhandled, Url.Content(Model.ControllerName + "/" + (Model.ActionName.ToUpper() != "INDEX" ? Model.ActionName : ""))))</span>
                    </div>
                </div>
            </div>
        </div>        
    </div>
    <div style="text-align: center; font-size: 14px; color: #6d6d6d;">
            @Html.Partial("~/Views/Shared/_Footer.cshtml")
        </div>
</body>
</html>
