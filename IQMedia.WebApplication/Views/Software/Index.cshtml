@{
    ViewBag.Title = "iQ media Software";
    Layout = "~/Views/Shared/_IQMediaMasterStaticPages.cshtml";
}
@section HeaderImage
{
    <img src="~/images/StaticBanner/Software.jpg" alt="Software banner" id="imgSoftwareHeader" />
}
@section ContentOptional
{
    <div id="divStickerParent" class="marginBottom20">
        <div id="sticker">
            <a id="btnSoftwareDiscover" class="SoftwareDiscover cursorPointer"></a>@*<img id="imgDiscover" alt="" src="../../../images/Static/Sprite-Software.png" >*@
            <img src="../../../images/Static/mid-arrow.png" alt=""><a id="btnSoftwareCreate" class="SoftwareCreate cursorPointer"></a>
            @*<img src="../../../images/static/Sprite-Software.png" alt="" id="imgCreate">*@
            <img src="../../../images/Static/mid-arrow.png" alt="" width="50" height="140" /><a
