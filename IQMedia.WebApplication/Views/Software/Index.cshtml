            <div style="position: absolute; display: block; left: 0px; right: 0px; margin-top: 0px;
                text-align: center;">
                <div style="background: url(../../../images/Static/bottom-shadow.png) repeat-x left top;">
                    <img src="../../../images/Static/sticky-arrow.png" style="margin-top: 0px; vertical-align: top;"
                        alt="" /></div>
            </div>
        </div>
    </div>
}
@section Content
{
    <link href="../../Css/Sticker.css" rel="stylesheet" />
    <script type="text/javascript" src="../../Scripts/jquery.sticky.js?v=1.0"></script>
    <script type="text/javascript" language="javascript">

        var topOffsetForSticky = 0;
        var x = 0;
        $(document).ready(function () {



            if ($(window).width() <= 768) {
                topOffsetForSticky = 0;
            }
            else {
                topOffsetForSticky = 48;
            }

            var fixDivPadding = 0;
            if (topOffsetForSticky > 0) {
                fixDivPadding = -48;
            }
            else {
                fixDivPadding = 48;
            }

            var imgheaderTagTop = $('#imgSoftwareHeader').offset().top;

            $('#btnSoftwareEngage').click(function () {
                $('html, body').animate({
                    //scrollTop: $("#divSoftwareEngage").offset().top - (imgheaderTagTop + $('#imgSoftwareHeader').parent().height()) + $('#divMenu').offset().top + fixDivPadding + 40
                    scrollTop: $("#divSoftwareEngage").offset().top - ($('#divStickerParent').height() + topOffsetForSticky)

                }, 500);
            });

            $('#btnSoftwareCreate').click(function () {
                $('html, body').animate({
                    //scrollTop: $("#divSoftwareCreate").offset().top - (imgheaderTagTop + $('#imgSoftwareHeader').parent().height()) + $('#divMenu').offset().top + fixDivPadding + 40
                    scrollTop: $("#divSoftwareCreate").offset().top - ($('#divStickerParent').height() + topOffsetForSticky)
                }, 500);

            });

            $('#btnSoftwareDiscover').click(function () {
                $('html, body').animate({
                    //scrollTop: $("#divSoftwareDiscover").offset().top - (imgheaderTagTop + $('#imgSoftwareHeader').parent().height()) + $('#divMenu').offset().top + fixDivPadding + 40
                    scrollTop: $("#divSoftwareDiscover").offset().top - ($('#divStickerParent').height() + topOffsetForSticky)/*- $(window).scrollTop() */

                }, 500);

            });
        });


        $(window).scroll(function () {

            if (x == 0) {
                $("#sticker").sticky({ topSpacing: topOffsetForSticky });
                x = 1;
            }


            if ($(window).scrollTop() >= $("#divSoftwareEngage").offset().top - ($('#divStickerParent').height() + topOffsetForSticky) - 10) {
                // $('#sticker').css('width', '94%');
                /*$('#imgDiscover').attr("src", "../../../images/Static/search-h.png");
                $('#imgCreate').attr("src", "../../../images/Static/edit-h.png");
                $('#imgEngage').attr("src", "../../../images/Static/chat.png");*/
                $('#btnSoftwareDiscover').removeClass();
                $('#btnSoftwareCreate').removeClass();
                $('#btnSoftwareEngage').removeClass();
                $('#btnSoftwareDiscover').addClass("SoftwareDiscover");
                $('#btnSoftwareCreate').addClass("SoftwareCreate");
                $('#btnSoftwareEngage').addClass("SoftwareEngageclicked");
            }

            else if ($(window).scrollTop() >= $("#divSoftwareCreate").offset().top - ($('#divStickerParent').height() + topOffsetForSticky) - 10) {
                // $('#sticker').css('width', '94%');
                /*$('#imgDiscover').attr("src", "../../../images/Static/search-h.png");
                $('#imgCreate').attr("src", "../../../images/Static/edit.png");
                $('#imgEngage').attr("src", "../../../images/Static/chat-h.png");*/

                $('#btnSoftwareDiscover').removeClass();
                $('#btnSoftwareCreate').removeClass();
                $('#btnSoftwareEngage').removeClass();
                $('#btnSoftwareDiscover').addClass("SoftwareDiscover");
                $('#btnSoftwareCreate').addClass("SoftwareCreateclicked");
                $('#btnSoftwareEngage').addClass("SoftwareEngage");

            }

            else if ($(window).scrollTop() >= $("#divSoftwareDiscover").offset().top - ($('#divStickerParent').height() + topOffsetForSticky) - 10) {
                //  $('#sticker').css('width', '94%');
                $('#btnSoftwareDiscover').removeClass();
                $('#btnSoftwareCreate').removeClass();
                $('#btnSoftwareEngage').removeClass();
                $('#btnSoftwareDiscover').addClass("SoftwareDiscoverclicked");
                $('#btnSoftwareCreate').addClass("SoftwareCreate");
                $('#btnSoftwareEngage').addClass("SoftwareEngage");
                /*$('#imgDiscover').attr("src", "../../../images/Static/search.png");
                $('#imgCreate').attr("src", "../../../images/Static/edit-h.png");
                $('#imgEngage').attr("src", "../../../images/Static/chat-h.png");*/
            }

            else {

                $('#btnSoftwareDiscover').removeClass();
                $('#btnSoftwareCreate').removeClass();
                $('#btnSoftwareEngage').removeClass();
                $('#btnSoftwareDiscover').addClass("SoftwareDiscover");
                $('#btnSoftwareCreate').addClass("SoftwareCreate");
                $('#btnSoftwareEngage').addClass("SoftwareEngage");

                // $('#sticker').css('width', '');                
                /*$('#imgDiscover').attr("src", "../../../images/Static/search-h.png");
                $('#imgCreate').attr("src", "../../../images/Static/edit-h.png");
                $('#imgEngage').attr("src", "../../../images/Static/chat-h.png");*/
            }


        });

    </script>
